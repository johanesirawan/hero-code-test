@using SimpleBookingWidget.Commons;
@using SimpleBookingWidget.Commons.Extension
@model SimpleBookingWidget.Core.Models.CreatePaymentModel
@{
    var methodList = Enum.GetValues(typeof(PaymentMethod)).Cast<PaymentMethod>()
        .Select(_ => new SelectListItem
        {
            Value = ((int)_).ToString(),
            Text = _.GetDescription()
        });
}


<form id="payment-form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Method" class="control-label"></label>
        <select asp-for="Method" asp-items="@(new SelectList(methodList, "Value", "Text"))" class="form-control">
            <option value="null">Please select..</option>
        </select>
        <span asp-validation-for="Method" class="text-danger"></span>
    </div>
</form>

